# ================================================================
# WALL-BUILD ENVIRONMENT CONFIGURATION
# ================================================================
# Copia questo file come .env e personalizza i valori per il tuo ambiente
# IMPORTANTE: Non committare mai il file .env con valori reali!

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
DATABASE_URL=sqlite:///data/wallbuild.db
DATABASE_TIMEOUT=20
DATABASE_ECHO=false

# ================================================================
# SECURITY & AUTHENTICATION 
# ================================================================
# IMPORTANTE: Cambia questa chiave in produzione!
# Puoi generare una nuova chiave con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=wallbuild_secure_secret_key_2024_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Password amministratore default (cambiare al primo accesso)
ADMIN_PASSWORD=WallBuild2024!

# ================================================================
# WEB SERVER CONFIGURATION
# ================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Origins (domini consentiti per richieste cross-origin)
# In produzione specificare i domini esatti
CORS_ORIGINS=*

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/wallbuild.log

# ================================================================
# FILE STORAGE
# ================================================================
# Directory base per file caricati e output
OUTPUT_DIR=output
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=50MB

# Percorsi organizzati output
OUTPUT_JSON_DIR=output/json
OUTPUT_PDF_DIR=output/pdf
OUTPUT_DXF_DIR=output/dxf
OUTPUT_IMAGES_DIR=output/images
OUTPUT_REPORTS_DIR=output/reports

# ================================================================
# PACKING ALGORITHM DEFAULTS
# ================================================================
# Dimensioni blocchi standard (mm)
BLOCK_WIDTHS=1239,826,413
BLOCK_HEIGHT=495

# Parametri algoritmo
ROW_OFFSET=826
SNAP_MM=1.0
KEEP_OUT_MM=2.0
SCARTO_CUSTOM_MM=5.0
MICRO_REST_MM=15.0
SPLIT_MAX_WIDTH_MM=413

# ================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ================================================================
# Redis per caching (se disponibile)
REDIS_URL=redis://localhost:6379/0

# Sentry per error tracking (se disponibile) 
SENTRY_DSN=

# Email per notifiche (se disponibile)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ================================================================
# DEVELOPMENT & DEBUG
# ================================================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false

# Abilitare output dettagliato
VERBOSE_LOGGING=false
DEBUG_SQL=false
DEBUG_PACKING=false

# ================================================================
# PRODUCTION OPTIMIZATIONS
# ================================================================
# Gunicorn workers (solo Linux)
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Session management
SESSION_EXPIRE_HOURS=24
CLEANUP_EXPIRED_SESSIONS=true

# Performance
ENABLE_GZIP=true
ENABLE_CACHING=true
CACHE_EXPIRE_SECONDS=3600